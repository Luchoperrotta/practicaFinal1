<p id="notice"><%= notice %></p>

<h1>Movimientos</h1>

<table>
  <thead>
    <tr>
      <th>Cuenta</th>
      <th>Date</th>
      <th>Description</th>
      <th>Debit</th>
      <th>Credit</th>
      <th>----</th>
      <th>Saldo</th>

      <form method="get" action="/current_accounts">
        buscar por cuenta (funca solo con el id de la cuenta): <input type="text" name="filter" value="" /> 
      	<input type="submit" />
        </form><br>

      <th colspan="3"></th>
    </tr>
  </thead>



  <tbody>
    <% @current_accounts.each do |current_account| %>
     
      <tr>
        <td><%= current_account.user_account.accountName %></td>
        <td><%= current_account.date %></td>
        <td><%= current_account.description %></td>
        <td><%= current_account.debit %></td>
        <td><%= current_account.credit %></td>
        <td><%= current_account.calcularSaldo + current_account.saldex  %></td>
 
        
        <td><%= link_to 'Show', current_account %></td>
        <td><%= link_to 'Edit', edit_current_account_path(current_account) %></td>
        <td><%= link_to 'Destroy', current_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<%= paginate @current_accounts %>

<br>

<%= link_to 'nuevo movimiento', new_current_account_path %>
